@model newkhandalapp.Models.Admin;

@{
    ViewData["Title"] = "Admin Login";
}

<h2>Admin Login</h2>

@* @if (ViewBag.ErrorMessage != null) *@
@* { *@
@*     <div class="alert alert-danger">@ViewBag.ErrorMessage</div> *@
@* } *@

<form asp-action="AdminLogin" method="post">
    <div class="mb-3">
        <label class="form-label">Username</label>
        <input asp-for="FirstName" class="form-control" placeholder="Enter username" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
</form>
